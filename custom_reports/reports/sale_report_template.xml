<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_proforma_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="article">
                    <!-- Title Box -->
                    <div style="text-align: center;width: 49%;margin-left: 51%;">
                        <h3 style="font-weight: 800;color: #054da2;">
                            <t t-if="doc.state == 'draft'">Quotation</t>
                            <t t-elif="doc.state == 'sale'">Sale Order</t>
                            <t t-else="">Quotation</t>
                        </h3>
                    </div>

                    <!-- Quote Details -->
                    <div class="row" style="margin-bottom: 5px;">
                        <div style="flex: 0 0 auto; width: 50%;">
                            <strong>EXPORTER / SELLER:</strong>
                            <div style="border: 1px solid #000;padding: 5px;height: 100%;width: 96%;">
                                <strong>Company Name:</strong>
                                <span t-field="doc.company_id.name"/>
                                <br/>
                                <strong>Address:</strong>
                                <span t-field="doc.company_id.street"/>
                                <br/>
                                <span t-field="doc.company_id.city"/>
                                <br/>
                                <span t-field="doc.company_id.state_id.name"/>,
                                <span t-field="doc.company_id.country_id.name"/>
                                <br/>
                                <span>
                                    <strong>PHONE:</strong>
                                    <span t-field="doc.company_id.phone"/>
                                </span>
                                <br/>
                                <span>
                                    <strong>EMAIL:</strong>
                                    <span style="color: #054da2;" t-field="doc.company_id.email"/>
                                </span>
                                <br/>
                                <span>
                                    <strong>Vat NO:</strong>
                                    <span t-field="doc.company_id.vat"/>
                                </span>
                            </div>
                        </div>
                        <div style="flex: 0 0 auto; width: 50%;">
                            <div>
                                <span>
                                    <strong>QUOTE DETAILS:</strong>
                                </span>
                                <div style="width: 100%;margin-bottom: 5px;">
                                    <div style="border:1px solid;padding: 5px 20px;">
                                        <span>
                                            <strong>Quotation NO:</strong>
                                            <span t-field="doc.name"/>
                                        </span>
                                        <br/>
                                    </div>
                                    <div style="border:1px solid;padding: 5px 20px;">

                                        <span>
                                            <strong>CONTAINER QTY:</strong>
                                            <br/>
                                            <span t-field="doc.container_qty"/>
                                        </span>
                                    </div>
                                    <div style="border:1px solid;padding: 5px 20px;">

                                        <span>
                                            <strong>TERMS OF PAYMENT:</strong>
                                            <br/>
                                            <span t-field="doc.payment_term_id.name"/>
                                        </span>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buyer Info -->
                    <div class="row" style="margin-bottom: 5px;">
                        <div style="flex: 0 0 auto; width: 50%;">
                            <strong>BUYER / CONSIGNEE:</strong>
                            <div style="border: 1px solid #000;padding: 5px;height: 100%;width: 96%;">

                                <strong>Company Name:</strong>
                                <span t-field="doc.partner_id.name"/>
                                <br/>
                                <strong>Address:</strong>
                                <span t-field="doc.partner_id.street"/>
                                <br/>
                                <span t-field="doc.partner_id.street2"/>
                                <br/>
                                <span t-field="doc.partner_id.city"/>,
                                <span t-field="doc.partner_id.country_id.name"/>
                                <br/>
                                <strong>
                                    <span>Name:</span>
                                    <span t-field="doc.partner_id.name"/>
                                </strong>
                                <br/>
                                <strong>
                                    <span>Mobile No:</span>
                                    <span t-field="doc.partner_id.mobile"/>
                                </strong>
                            </div>
                        </div>

                        <div style="flex: 0 0 auto; width: 50%;">
                            <div>

                                <span>
                                    <strong>BANK INFORMATION:</strong>
                                </span>
                                <div style="width: 100%;margin-bottom: 5px;">
                                    <div style="border:1px solid;padding: 5px 20px;">

                                        <span>
                                            <t t-if="doc.company_id.bank_ids">
                                                <strong>Bank:</strong>
                                                <span t-field="doc.company_id.bank_ids[0].bank_id.name"/>
                                                <br/>
                                                <strong>Account number:</strong>
                                                <span t-field="doc.company_id.bank_ids[0].acc_number"/>
                                                <br/>
                                                <strong>IBAN:</strong>
                                                <span t-field="doc.company_id.bank_ids[0].bank_id.iban"/>
                                                <br/>
                                                <strong>Swift code:</strong>
                                                <span t-field="doc.company_id.bank_ids[0].bank_id.bic"/>
                                                <br/>
                                                <strong>Provider name:</strong>
                                                <span t-field="doc.company_id.name"/>
                                            </t>
                                        </span>
                                        <br/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Shipping Details -->
                    <div class="row" style="margin-bottom: 5px;">
                        <div style="flex: 0 0 auto; width: 50%;">
                            <strong>SHIPPING DETAILS:</strong>
                            <div style="border: 1px solid #000;width: 96%;">
                                <div class="row">
                                    <br/>
                                    <div style="flex: 0 0 auto;width: 50%;border-right: 1px solid;">
                                        <span>
                                            <strong>PRE CARRIAGE BY:</strong>
                                            <br/>
                                            <span style="display: block; text-align: center;"
                                                  t-field="doc.pre_carriage"/>
                                        </span>
                                    </div>
                                    <div style="flex: 0 0 auto;width: 50%;">
                                        <span>
                                            <strong>COUNTRY OF ORIGIN:</strong>
                                            <br/>
                                            <span style="display: block; text-align: center;"
                                                  t-field="doc.country_of_origin"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="flex: 0 0 auto; width: 50%;">
                            <strong>DELIVERY DETAILS:</strong>
                            <div style="border: 1px solid #000;width: 96%;">
                                <div class="row">
                                    <br/>
                                    <div style="flex: 0 0 auto;width: 50%;border-right: 1px solid;">
                                        <span>
                                            <strong>PORT OF LOADING:</strong>
                                            <br/>
                                            <span style="display: block; text-align: center;"
                                                  t-field="doc.port_of_loading"/>
                                        </span>
                                    </div>
                                    <div style="flex: 0 0 auto;width: 50%;">
                                        <span>
                                            <strong>PORT OF DISCHARGE:</strong>
                                            <br/>
                                            <span style="display: block; text-align: center;"
                                                  t-field="doc.port_of_discharge"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table style="border-collapse: collapse;width: 100%;font-size: 14px;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">S.#</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">PRODUCT
                                    DESCRIPTION
                                </th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">IMAGE</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">HSCODE</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">UNIT</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">UNIT PRICE</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">QTY</th>
                                <th style="border: 1px solid #000;padding: 2px;text-align: left;">TOTAL AMOUNT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.order_line" t-as="line">
                                <td style="border: 1px solid #000;padding: 2px;text-align: left;">
                                    <span t-esc="line_index + 1"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px;">
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px;">
                                    <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)"
                                         style="width: 90%"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px;">
                                    <t t-if="line.product_id.hs_code">
                                        <span t-field="line.product_id.hs_code"/>
                                    </t>
                                </td>
                                <td style="border: 1px solid #000;padding: 2px;text-align: left;">
                                    <span t-field="line.product_uom.name"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    <span t-field="line.price_unit"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="6"
                                    style="border: 1px solid #000;padding: 5px;text-align: left;padding-left: 24px;">
                                    <strong>FINAL
                                        <t t-if="doc.incoterm">
                                            <span t-esc="doc.incoterm.code"/>
                                        </t>
                                        VALUE:
                                        <span t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/>
                                    </strong>
                                </td>
                                <td colspan="6" style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    <strong>
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </strong>
                                </td>
                            </tr>
                            <t t-if="doc.custom_note">
                                <tr>
                                    <td colspan="6"
                                        style="border: 1px solid black;text-align: left;padding: 24px;font-size: 16px;">
                                        <strong>NOTE:</strong>
                                        <br/>
                                        <span t-field="doc.custom_note"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>